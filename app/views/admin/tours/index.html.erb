<h4 class="d-flex justify-content-between mb-4">
  <span>New Tour</span>
</h4>
<% @tours.each do |tour|%>
<%= link_to admin_tour_url(tour) ,class:'text-decoration-none' do%>
<div class="card mb-3">
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag tour.image, width: "120", height: "100" if tour.image.attached? %>
      </div>
      <div class="col-md-10">
        <div class="tack">
          <h5 clase="card-title mb-1 text-dark"><%=tour.title%></<h5>
            <% if tour.host_user == 'publish' %>
            <h5 class="badge badge-primary"><%= t('.publish') %> </h5>
            <% else %>
            <h5 class="badge badge-danger"><%= t('.draft') %> </h5>
            <% end %>
          </div>
          <p class="text-secondary mb-0"><%= tour.description%></p>
        </div>
      </div>
    </div>
  </div>
  <%end%>
  <%end%>
