<%= link_to 'Back', admin_tours_path, class:'btn btn-secondary mt-3'%>
<% if @tour.host_user == 'draft'%>
<%= link_to 'Publish', admin_tour_path(@tour, host_user: 'publish'), method: :patch ,data: { confirm: "You sure?" }, remote: true, class: 'btn btn-info mt-3'%>
<% else%>
<%= link_to 'Unpublish', admin_tour_path(@tour, host_user: 'draft'), method: :patch ,data: { confirm: "You sure?" }, remote: true, class: 'btn btn-info mt-3'%>
<% end %>
<%= link_to 'Destroy', admin_tour_path(@tour), method: :delete, data: { confirm: 'Are you sure?'},class:'btn btn-danger mt-3'%>
